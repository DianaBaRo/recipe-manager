<% if @recipe %>
  <%= render partial: 'layouts/navbar' %>
  <div class="container text-center">
    <h1>Ingredients for <%= @recipe.name %></h1>
    <br /><br />
  </div>
  <div class="container">
    <%= form_tag destroy_multiple_recipe_ingredients_path, method: :delete do %>
       <% if params[:recipe_id] %>
        <%= hidden_field_tag "recipe_id", params[:recipe_id] %>
      <% end %>
      <% @recipe.recipe_ingredients.each do |ri| %>
        <%= check_box_tag "recipe_ingredients[]", ri.id %>
        <%= ri.ingredient.name %><br/>
      <% end %>
      <br /><br />
      <% if not_empty @recipe.recipe_ingredients %>
        <button type=submit_tag class="btn btn-primary">Delete selected</button>
      <% end %>
    <% end %>
  </div>
<% end %>

