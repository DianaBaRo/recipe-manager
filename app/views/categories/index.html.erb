<% if @categories %>
  <%= render partial: 'layouts/navbar' %>
  <div class="container text-center">
    <h1>Categories</h1>
  </div>
  <div class="container">
    <ul class="list-group list-group-flush">
      <% @categories.each do |category| %>
        <%= link_to category.name, category_path(category), :class => "list-group-item" %>
      <% end %>
    </ul>
  </div>
<% end %>
