 <div class="container text-center"> 
  <h1>Login here</h1><br />

  <% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
      <div id="error_explanation">
        <%= flash[:error] %>
      </div>
    </div>
  <% end %>

  <%= form_for(:user) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <button type=f.submit class="btn btn-primary">Login</button>
    
  <% end %>
</div>