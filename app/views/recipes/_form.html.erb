<%= form_for(@recipe) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label :cooking_time %><%= " in minutes" %>
    <%= f.number_field :cooking_time, min:1, :class => "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label :servings %>
    <%= f.number_field :servings, min:1, max:20, :class => "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label :directions %>
    <%= f.text_area :directions, size: "24x6", :class => "form-control" %><br>
  </div>
  <div class="form-group">
    <p>Select a category:</p>
    <%= f.collection_select(:category_ids, Category.all, :id, :name, {include_blank: 'Select a category'}, { multiple: true, :style => "width:150px", :class => "form-control" }) %>
  </div>

  <button type=f.submit class="btn btn-primary">Submit</button>
<% end %>
